.row
  - tracks.each do |track|
    .col-xs-6.col-sm-4.col-md-3.col-lg-2 data-track-id=(track.friendly_id)
      .item
        .pos-rlt
          .bottom
            span.badge.bg-info.m-l-sm.m-b-sm
              = duration_translator(track.duration)
          .item-overlay.opacity.r.r-2x.bg-black
            .text-info.padder.m-t-sm.text-sm
              i.fa.fa-star
              i.fa.fa-star
              i.fa.fa-star
              i.fa.fa-star
              i.fa.fa-star-o.text-muted
            .center.text-center.m-t-n
              a[href="#"]
                i.icon-control-play.i-2x
            .link_container.bottom.padder.m-b-sm
              = link_to_favorite(track)
              a[href="#"]
                i.fa.fa-plus-circle
          a[href="#"]
            = image_tag track.album.cover_url, class: 'r r-2x img-full'
        .padder-v
          a.text-ellipsis[href="#"]
            = track.name[0..26]
          a.text-ellipsis.text-xs.text-muted[href="#"]
            = track.album.name[0..26]
.row
  = paginate tracks, remote: true